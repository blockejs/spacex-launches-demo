---
import Navbar from "@components/Navbar.astro";
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<div id="app" class="relative h-screen">
			<header class="[grid-area:header] bg-gray-900">
				<Navbar />
			</header>
			<main class="[grid-area:main] overflow-y-auto p-6">
				<slot />
			</main>
		</div>
	</body>
</html>

<style is:global>
	html {
		background: oklch(27.8% 0.033 256.848);
		margin: 0;
	}

	body {
		margin: 0;
	}
</style>

<style>
	#app {
		display: grid;
		grid-template-areas:
			"header"
			"main";
		grid-template-rows: auto 1fr;
	}
</style>
